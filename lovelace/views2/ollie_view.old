  - icon: mdi:paw
    id: ollie
    title: Ollie's Room
    path: ollie_room
    visible: false
    badges: []
    cards:
      - type: vertical-stack
        cards:
          - type: markdown
            card_size: 2
            style: >
              ha-card {
                --ha-card-background: none !important;
                box-shadow: none !important;
              }
              ha-card a, p {
                color: var(--primary-text-color) !important;
              }
              ha-markdown {
                padding: 0 16px !important;
              }
              h1 {
                font-size: 32px;
                font-weight: bold;
                font-family: Helvetica;
                letter-spacing: '-0.01em';
              }
            content: |
              [<ha-icon icon="mdi:arrow-left"></ha-icon>](/lovelace-mobile-yaml/default_view)
              <h1>Ollie's Room</h1>
          - type: markdown
            content: |
              # Sensors
            style:
              .: |
                ha-card {
                  --ha-card-background: none !important;
                  box-shadow: none !important;
                }
              ha-markdown:
                $: |
                  h1 {
                    font-size: 20px;
                    font-weight: bold;
                    font-family: Helvetica;
                    letter-spacing: '-0.01em';
                  }
          - type: horizontal-stack
            cards:
              - type: glance
                entities: 
                  - binary_sensor.area_ollie_s_room
          - type: markdown
            content: |
              # Lights
            style:
              .: |
                ha-card {
                  --ha-card-background: none !important;
                  box-shadow: none !important;
                }
              ha-markdown:
                $: |
                  h1 {
                    font-size: 20px;
                    font-weight: bold;
                    font-family: Helvetica;
                    letter-spacing: '-0.01em';
                  }
          - type: 'custom:button-card'
            icon: 'mdi:lamp'
            entity: light.ollie_s_lamp
            show_icon: true
            show_name: true
            state:
              - styles:
                  icon:
                    - color: 'var(--paper-item-icon-active-color)  '
                value: 'on'
            style: |
              ha-card {
                margin: 10px;
                box-shadow: 
                  {% if is_state('sun.sun', 'above_horizon') and is_state('light.ollie_s_lamp', 'on') %}
                    inset -4px -4px 8px 0 rgba(255,255,255,.5), inset 4px 4px 8px 0 rgba(0,0,0,.03);
                  {% elif is_state('sun.sun', 'above_horizon') and is_state('light.ollie_s_lamp', 'off') %}                      
                    -5px -5px 8px 0 rgba(255,255,255,.5),5px 5px 8px 0 rgba(0,0,0,.03);
                  {% elif is_state('sun.sun', 'below_horizon') and is_state('light.ollie_s_lamp', 'on') %}                      
                    inset -4px -4px 10px 0 rgba(50, 50, 50,.5), inset 4px 4px 12px 0 rgba(0,0,0,.3); 
                  {% elif is_state('sun.sun', 'below_horizon') and is_state('light.ollie_s_lamp', 'off') %}   
                    -5px -5px 8px 0 rgba(50, 50, 50,.5),5px 5px 8px 0 rgba(0,0,0,.15);
                  {% endif %}    
              }
            styles:
              card:
                - width: 120px
                - height: 120px
                - border-radius: 15px
                - background-color: var(--primary-background-color)
              name:
                - font-size: 12px
              icon:
                - color: var(--primary-text-color)
            tap_action:
              action: toggle
              haptic: light
            hold_action:
              action: more-info
              haptic: light
